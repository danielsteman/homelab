# Copy this file to terraform.tfvars and fill in your values
# terraform.tfvars is gitignored for security

proxmox_url          = "https://192.168.1.100:8006/api2/json"
proxmox_token_id     = "root@pam!terraform"
proxmox_token_secret = "your-api-token-secret"
proxmox_node         = "pve"

template_name = "ubuntu-template"
storage       = "local-lvm"
default_user  = "ubuntu"

# Your SSH public key for cloud-init
ssh_keys = <<-EOT
ssh-rsa AAAA... your-key-here
EOT
